<div class="pageTitle"><h1><%= @lifecycle.name %> > Edit</h1></div>


<div class="InputArea">
<% form_for(@lifecycle) do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <br/>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <br/>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', :controller => 'catalogs' %>
</div>