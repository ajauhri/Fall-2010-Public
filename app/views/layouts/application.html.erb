<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
  "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <title>PET 1.3</title>
    <%= stylesheet_link_tag "pet", :media => "all" %>
  </head>
  <body>

    <div id="topbg"></div>

    <div id="main">

      <div id="header">
        <% if current_user %>
        <div id="LoginInfo">
          <div id="LoggedIn">
            Logged in as: <%=  current_user.username %>
          </div>
          <div id="LoginMenu">
            <ul>
              <li><%= link_to "New User", new_user_path if current_user.role == User::ADMIN %></li>
              <li> <%= link_to "Settings", edit_user_path(:current) %></li>
              <li> <%= link_to "Logout", logout_path %></li>
            </ul>
          </div>
        </div>
        <% end %>
        
        <div id="Title">
          <h1>PET 1.3</h1>
        </div>

        <div id="Subtitle">
          <h2>Your Favorite Management Tool</h2>
        </div>
      </div>

      <div id="content">
        <% if current_user %>
        <div id="NavBar">
          <ul id="menu">
              <li><a class="sel"><span></span>Project Management</a></li>
              <li><%= link_to "<span></span>Create New Project", :controller => 'projects', :action => 'new' %></li>
              <li><a href="#"><span></span>Log Effort</a></li>
          </ul>
        </div>
        <% end %>


        <% if current_user %>
          <div id="sidebar">


          </div>
        <% end %>
        <div id="mainContent">
          <%= yield :layout %>
        </div>


        <div class="cleaner"></div>

        <div id="footer">
          Copyright
        </div>


      </div>

    </div>
  </body>
</html>