<h1>Projects</h1>

<% columns = [{:type => 'html', :class => "first"}, {:type => 'html'}, {:type => 'html'}, {:type => nil, :class => "last"}] %>
<%= datatable(columns, {:sort_by => "[0, 'asc']", :per_page => 10}) %>

<!-- table class="DisplayTable" -->
<table class='datatable'>
  <thead>
  <tr>
    <th id="HeaderLeft">Name</th>
    <th>Description</th>
    <th>Total Est. Effort</th>
    <th>Status</th>
    <th id="HeaderRight"></th>
  </tr>
  </thead>
  <tbody>
<% @projects.each do |project| %>
  <tr>
    <td><%= link_to h(project.name), project %></td>
    <td><%=h project.description %></td>
    <td><%=h project.total_estimated_effort %></td>
    <td><%=h project.status %></td>
    <td>
      
      <%= link_to image_tag('/images/edit_icon.gif', :size => "15x15"), edit_project_path(project) %>
      
    <%= link_to image_tag('/images/delete_icon.gif', :size => "15x15"), project, :confirm => 'Are you sure?', :method => :delete %>
   
      </td>
  </tr>
<% end %>
</tbody>
</table>

<br />