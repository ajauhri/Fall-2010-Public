<table class="DisplayTable" >
  <tr><td>
      <b>Name:</b>
      <%=h @project.name %>
    </td>
    <td width="120px" style="text-align: right">
      <%= link_to image_tag('/images/edit_icon.gif', :size => "15x15", :title => 'Edit '+@project.name, :alt => 'Edit '+@project.name), edit_project_path(@project) %>
      <%= link_to image_tag('/images/delete_icon.gif', :size => "15x15", :title => 'Delete '+@project.name, :alt => 'Delete '+@project.name), @project, :confirm => 'Are you sure?', :method => :delete %>
      <%= link_to image_tag('/images/back.gif', :size => "15x15", :title => 'Back', :alt => 'Back'), projects_path %>
    </td>
  </tr>

  <tr><td colspan="2">
      <b>Description:</b>
      <%=h @project.description %>
    </td>
  </tr>
  <tr><td colspan="2">
      <b>Total estimated effort:</b>
      <%=h @project.total_estimated_effort %>
    </td>
  </tr>
  <tr><td colspan="2">
      <b>Actual effort:</b>
      <%=h @project.actual_effort %>
    </td>
  </tr>
  <tr><td colspan="2">
      <b>Status:</b>
      <%=h @project.status %>
    </td>
  </tr>
</table>


<div>

  <% form_remote_for(:project_phase, @project_phase, :url => {:controller => :project_phases, :action => :create},
    :html => { :id => "phases_form"}) do |f| %>
  <%# form_remote_for :project_phase, :url => :url => {:controller => :project_phases, :action => :create} do |f| %>

    <table class="quickTable" id="quickProject">
      <tr>
        <td>Name:</td><td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>Description:</td><td><%= f.text_field :description %></td>
      </tr>
    </table>

    <%= f.submit "Create" %>
  <% end %>
</div>


<table class="DisplayTable" style="width: 100%">
  <th id="HeaderLeft" style="width: 80%">Phase / Deliverables</th>
  <th>Estimated Effort</th>
  <th>Actual Effort</th>
  <th>Estimated Prod. Rate</th>
  <th>Actual Prod. Rate</th>
  <th></th>
  <th id="HeaderRight"</th>
  <tbody id="phaseslist">
    <%= render :partial => @project_phases %>
  </tbody>
</table>


<%= sortable_element("phaseslist", 
  :url => sort_projects_path,
  :tag => "tr") %>




