<div class="pageTitle">
<h1><%=h @project.name %> (<%=h @project.status %>)
    <%= link_to image_tag('/images/edit_icon.gif', :size => "15x15", :title => 'Edit '+@project.name, :alt => 'Edit '+@project.name), edit_project_path(@project) %>
      <%= link_to image_tag('/images/delete_icon.gif', :size => "15x15", :title => 'Delete '+@project.name, :alt => 'Delete '+@project.name), @project, :confirm => 'Are you sure?', :method => :delete %>
      <%= link_to image_tag('/images/back.gif', :size => "15x15", :title => 'Back', :alt => 'Back'), projects_path %>
 </h1>
 <p><%=h @project.description %></p>
</div>

<script type="text/javascript" >
  function rshow()
  {
    jQuery('#newPhase').toggle();
    jQuery('#project_phase_name').val('');
    jQuery('#project_phase_description').val('');
    textField = jQuery('#addNewPhaseText');
    textField.html() == 'Add New Phase' ? textField.html('Cancel Add') : textField.html('Add New Phase') ;
  }
</script>

<table class="datatable" id="example" style="width: 100%">
  <thead>
    <tr>
  <th id="HeaderLeft" style="width: 80%">Phase / Deliverables</th>
  <th>Estimated Effort</th>
  <th id="HeaderRight">Actual Effort</th>
    </tr>
  </thead>
  <%= render :partial => @project_phases %>
  <tbody id="projectTableBottom">
  <tr class=<%= @project_phases.size % 2 == 0 ? "odd": "evenPhase" %>>
    <td><b><%= link_to 'Add New Phase', '#', :onclick => 'rshow();return false;', :id => 'addNewPhaseText' %></b></td>
    <td></td>
    <td></td>
  </tr>
  <tr id="newPhase" style="display:none">
    <td>
       <% form_remote_for(:project_phase, @project_phase, :url => {:controller => :project_phases, :action => :create},
  :html => { :id => "phases_form"}) do |f| %>
  <table class="quickTable" id="quickProject">
    <tr>
      <td>Name:</td><td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>Description:</td><td><%= f.text_field :description %></td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= hidden_field 'project_phase', 'project_id', :value => @project.id %>
  <%= f.submit "Create" %><%= button_to 'Cancel', '#',  :onclick => 'rshow();return false;' %>
<% end %>
      </td>
    </tr>
  </table>

    </td>
    <td></td>
    <td></td>
  </tr>
  <tr class="tableFooter" style="text-align:left;">
    <td><b><span class="whiteText">Totals:</span></b></td>
    <td><span class="whiteText"><%=h @project.total_estimated_effort %></span></td>
    <td><span class="whiteText"><%=h @project.actual_effort %></span></td>
  </tr>
  </tbody>
</table>
  
<span id="sortable_list_control">
<%= sortable_element("example",
  :url => sort_projects_path,
  :handle => 'handle',
  :tag => "tbody", :only => 'phaseSelection') %>
</span>



