


<% form_for(@user) do |f| %>

  <%= f.error_messages %>


<div class="RoundContent">
   <div class="RoundTop">
	 <%= image_tag "/images/UpperLeftCorner.png", :class=> "corner", :style => "display: none" %>
   </div>

   <table class="InputTable">
     <tr>
    <td>
    <%= f.label "User Name:" %>
    </td><td>
    <%= f.text_field :username %>
    </td>
  </tr>
  <tr>
    <td>
    <%= f.label "Email Address:" %>
        </td><td>
    <%= f.text_field :email %>
      </td>
  </tr>
  <tr>
    <td>
    <%= f.label "Password:" %>
        </td><td>
    <%= f.password_field :password %>
     </td>
  </tr>
  <tr>
    <td>
    <%= f.label 'Confirm Password:' %>
    </td><td>
    <%= f.password_field :password_confirmation %>
      </td>
  </tr>
  <% if current_user.role == User::ADMIN %>
  <tr>
    <td>
    <%= f.label 'Role:' %>
    </td><td>
    <%= f.select :role, User::ROLES %>
    </td></tr>
  <% end %>

  <tr><td>
    </td><td>
    <%= f.submit 'Submit' %>
    </td></tr>
</table>

   <div class="RoundBottom">
	 <%= image_tag "/images/BottomleftCorner.png", :class=> "corner", :style => "display: none" %>
   </div>
</div>

<% end %>