
<table class="CatalogTable DisplayTable">
  <tr>
    <th id="HeaderLeft">Username</th>
    <th>Email</th>
    <th>Role</th>
    <th id="HeaderRight"></th>
  </tr>




<% @users.each do |user| %>
  <tr>
    <td><%= link_to h(user.username), edit_user_path(user) %></td>
    <td><%=h user.email %></td>
     <td><%= user.role  %></td>
    <td><%= link_to 'X', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  <tr>
    <td colspan="4">
      <%= link_to image_tag("/images/plus_icon.png") + ' New User', new_user_path %>
    </td>
  </tr>
</table>
