<div class="pageTitle"><h1><%= @deliverable_type.name %> > Edit</h1></div>

<div class="InputArea">
<% form_for(@deliverable_type) do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <br/>
  <p>
    <%= f.label :unit_of_measure %><br />
    <%= f.text_field :unit_of_measure %>
  </p>
  <br/>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', :controller => 'catalogs' %>
</div>